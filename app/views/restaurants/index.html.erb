

<%= react_component("HelloWorld") %>


<p id="notice"><%= notice %></p>

<header>
  <div class="header_content">

    <div class="title">
      <h1>WeEat</h1>
      <h6>It’s 12:00 and you’re hungry.</h6>
    </div>

    <form class="search">
      <%=text_field_tag :name, nil, placeholder: 'Find a restaurant'%>
      <input type="submit" value="Submit">
    </form>
  </div>
</header>

<div class=".container">

  <form class="row filters form-inline">

    <div class="col-md-3">
        Cuisine <br>
        <select id="genre" name="genre">
          <% @genres.each do |genre| %>
            <option value=<%=genre%>><%=genre%></option>
          <% end %>
        </select>
    </div>
    <div class="col-md-3">
        Rating <br>
        <select id="rating" name="user_id">
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
    </div>
    <div class="col-md-3">
        Speed <br>
        <select id="user_id" name="user_id">
          <option value="1">Brad</option>
          <option value="2">Angie</option>
          <option value="3">Jenny</option>
        </select>
    </div>

    <div class="col-md-3">
      <input type="submit" value="Submit" class="col-md-12">
    </div>

  </form>

  <div class="row">
    <div class="col-md-4 restaurants">

      <% @restaurants.each do |restaurant| %>

        <div class="restaurant">
          <div class="restaurant_content">
            <span class="genre"> <%= restaurant.genre %> </span>
            <span class="name"> <%= restaurant.name %> </span>
            <span>
              <% if restaurant.tenbis %>
                <img src="http://localhost:3000/assets/tenbis.png">
              <% end %>
            </span>
            <div class="rating">
              <% restaurant.rating.times do %>
                <span class="glyphicon glyphicon-star"></span>
              <% end %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>




